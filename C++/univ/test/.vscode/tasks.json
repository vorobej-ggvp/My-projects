                "options": {
                    "cwd": "C:\\cygwin64\\bin"
                },
                "problemMatcher": [
                    "$gcc"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "presentation": {
                    "clear": true                        // <-- this line
                },

            }
        ]
    }